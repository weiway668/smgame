/* pages/match3/match3.wxss */
/* 消消乐游戏页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFE5E5 0%, #FFF9F5 50%, #FFFFFF 100%);
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* 游戏头部 */
.game-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-left, .header-right {
  flex: 0 0 auto;
}

.header-center {
  flex: 1;
  text-align: center;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFDAB9, #FFE5CC);
  color: #4A4A4A;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255, 218, 185, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #7A7A7A;
}

.mode-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #4A4A4A;
  font-weight: bold;
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.mode-badge.classic {
  background: linear-gradient(135deg, #B8E6D1, #D1F2E4);
}

.mode-badge.survival {
  background: linear-gradient(135deg, #FFB3BA, #FFC9CF);
}

/* 游戏统计 */
.game-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 218, 185, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF9800;
  margin-bottom: 4rpx;
}

.stat-value.combo-normal {
  color: #FF9800;
}

.stat-value.combo-warm {
  color: #FFA500;
  animation: pulse 1s ease infinite;
}

.stat-value.combo-hot {
  color: #FF6B6B;
  animation: pulse 0.5s ease infinite;
}

.stat-value.combo-super {
  color: #FF0000;
  animation: pulse 0.3s ease infinite;
  font-size: 42rpx;
}

.combo-status {
  font-size: 20rpx;
  color: #FF6B6B;
  font-weight: bold;
  height: 24rpx;
}

.stat-best {
  font-size: 20rpx;
  color: #999;
}

/* 威胁条 */
.threat-bar {
  width: 100rpx;
  height: 10rpx;
  background: #E0E0E0;
  border-radius: 5rpx;
  overflow: hidden;
  margin: 8rpx 0;
}

.threat-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFC107, #FF5722);
  transition: width 0.3s ease;
}

/* 游戏画布区域 */
.game-canvas-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  flex: 1;
}

.game-canvas {
  background: #2C3E50;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

/* 得分弹出 */
.score-popups {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.score-popup {
  position: absolute;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFD700;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.5);
  transform: translateX(-50%);
  pointer-events: none;
}

/* 游戏覆盖层 */
.game-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 16rpx;
  margin: 20rpx;
}

.overlay-content {
  text-align: center;
  padding: 40rpx;
}

.overlay-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.overlay-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.game-result {
  margin: 30rpx 0;
}

.result-score, .result-combo, .result-time {
  display: block;
  font-size: 32rpx;
  color: #FFD700;
  margin: 10rpx 0;
}

.result-score {
  font-size: 40rpx;
  font-weight: bold;
}

.btn-start, .btn-resume, .btn-restart, .btn-home {
  background: linear-gradient(135deg, #FF9800, #FFC107);
  color: white;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.btn-home {
  background: linear-gradient(135deg, #607D8B, #78909C);
  box-shadow: 0 4rpx 12rpx rgba(96, 125, 139, 0.3);
}

/* 控制面板 */
.control-panel {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 游戏信息 */
.game-info {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 12rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF9800;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 0;
  background: white;
  border: 2rpx solid #FF9800;
  color: #FF9800;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #FF9800;
  color: white;
  transform: scale(0.95);
}

.action-btn.disabled {
  opacity: 0.5;
  background: #f0f0f0;
  color: #999;
  border-color: #ddd;
}

/* 动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes fadeUp {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(-50rpx);
  }
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-10rpx);
  }
  75% {
    transform: translateX(10rpx);
  }
}

.shake-animation {
  animation: shake 0.5s ease;
}
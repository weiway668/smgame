/* 迷宫游戏页面样式 */

.container {
  height: 100vh;
  background: linear-gradient(180deg, #4CAF50 0%, #66BB6A 100%);
  display: flex;
  flex-direction: column;
  padding: 0;
  overflow: hidden;
}

/* 游戏头部 */
.game-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-left, .header-right {
  flex: 0 0 auto;
}

.header-center {
  flex: 1;
  text-align: center;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4CAF50;
  color: white;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2E7D32;
}

.difficulty-selector {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #4CAF50;
  color: white;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.difficulty-selector .arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
}

/* 游戏统计 */
.game-stats {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 20rpx;
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.9));
  margin: 16rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08),
              inset 0 1rpx 0 rgba(255, 255, 255, 1);
  backdrop-filter: blur(10px);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 4rpx;
}

.stat-best {
  font-size: 20rpx;
  color: #999;
}

/* 游戏画布区域 */
.game-canvas-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  flex: 1;
  max-height: 750rpx; /* 限制最大高度 */
}

.game-canvas {
  background: #2C3E50; /* 与迷宫墙壁颜色一致 */
  border-radius: 12rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

/* 游戏覆盖层 */
.game-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  margin: 20rpx;
}

.overlay-content {
  text-align: center;
  padding: 40rpx;
}

.overlay-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.overlay-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
}

.btn-start, .btn-resume, .btn-restart {
  background: #4CAF50;
  color: white;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.btn-restart {
  background: #FF9800;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

/* 控制面板 */
.control-panel {
  padding: 30rpx 20rpx 40rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.98), rgba(255, 255, 255, 0.95));
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  box-shadow: 0 -6rpx 24rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(10px);
}

/* 方向控制器 */
.direction-controller {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.direction-row {
  display: flex;
  justify-content: center;
  align-items: center;
}

.direction-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(145deg, #4CAF50, #388E3C);
  color: white;
  border-radius: 20rpx;
  margin: 6rpx;
  font-size: 48rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(76, 175, 80, 0.4),
              inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
  transition: all 0.15s ease;
  position: relative;
}

.direction-btn::after {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  right: 2rpx;
  bottom: 2rpx;
  border-radius: 18rpx;
  background: linear-gradient(145deg, rgba(255,255,255,0.2), transparent);
  pointer-events: none;
}

.direction-btn:active {
  transform: scale(0.92) translateY(2rpx);
  box-shadow: 0 3rpx 8rpx rgba(76, 175, 80, 0.3),
              inset 0 -1rpx 0 rgba(0, 0, 0, 0.1);
}

.direction-center {
  width: 100rpx;
  height: 100rpx;
  margin: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 中心圆点指示器 */
.direction-center::after {
  content: '';
  width: 30rpx;
  height: 30rpx;
  background: radial-gradient(circle, #4CAF50, #388E3C);
  border-radius: 50%;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 0;
  background: linear-gradient(145deg, #ffffff, #f5f5f5);
  border: 2rpx solid #4CAF50;
  color: #4CAF50;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.08),
              inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(76, 175, 80, 0.1), transparent);
  transition: left 0.5s ease;
}

.action-btn:active {
  transform: translateY(1rpx);
  background: linear-gradient(145deg, #4CAF50, #388E3C);
  color: white;
  border-color: #388E3C;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1),
              inset 0 -1rpx 0 rgba(0, 0, 0, 0.2);
}

.action-btn.active {
  background: linear-gradient(145deg, #4CAF50, #388E3C);
  color: white;
  border-color: #388E3C;
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.3),
              inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
}

.action-btn.active::before {
  left: 100%;
}

.action-btn.disabled {
  opacity: 0.4;
  background: linear-gradient(145deg, #f0f0f0, #e0e0e0);
  color: #999;
  border-color: #ddd;
  box-shadow: none;
}

.action-btn.disabled:active {
  transform: none;
  background: linear-gradient(145deg, #f0f0f0, #e0e0e0);
  color: #999;
}

/* 动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.pulse-animation {
  animation: pulse 2s ease infinite;
}
/* 迷宫游戏页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4CAF50 0%, #81C784 50%, #C8E6C9 100%);
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* 游戏头部 */
.game-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-left, .header-right {
  flex: 0 0 auto;
}

.header-center {
  flex: 1;
  text-align: center;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4CAF50;
  color: white;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2E7D32;
}

.difficulty-selector {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #4CAF50;
  color: white;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.difficulty-selector .arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
}

/* 游戏统计 */
.game-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 4rpx;
}

.stat-best {
  font-size: 20rpx;
  color: #999;
}

/* 游戏画布区域 */
.game-canvas-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  flex: 1;
}

.game-canvas {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 游戏覆盖层 */
.game-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  margin: 20rpx;
}

.overlay-content {
  text-align: center;
  padding: 40rpx;
}

.overlay-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.overlay-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
}

.btn-start, .btn-resume, .btn-restart {
  background: #4CAF50;
  color: white;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.btn-restart {
  background: #FF9800;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

/* 控制面板 */
.control-panel {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 方向控制器 */
.direction-controller {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.direction-row {
  display: flex;
  justify-content: center;
}

.direction-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  border-radius: 16rpx;
  margin: 4rpx;
  font-size: 40rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.3);
  transition: all 0.2s ease;
}

.direction-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 4rpx rgba(76, 175, 80, 0.3);
}

.direction-center {
  width: 80rpx;
  height: 80rpx;
  margin: 4rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 16rpx 0;
  background: white;
  border: 2rpx solid #4CAF50;
  color: #4CAF50;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #4CAF50;
  color: white;
}

.action-btn.active {
  background: #4CAF50;
  color: white;
}

.action-btn.disabled {
  opacity: 0.5;
  background: #f0f0f0;
  color: #999;
  border-color: #ddd;
}

/* 动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.pulse-animation {
  animation: pulse 2s ease infinite;
}
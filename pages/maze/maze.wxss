/* pages/maze/maze.wxss */
/* WXML渲染版本样式 */

.container {
  height: 100vh;
  background: linear-gradient(180deg, #E6F2FF 0%, #FFFFFF 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  overflow: hidden;
}

.top-bar {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  box-sizing: border-box;
}

.level-indicator {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c5f8d;
  padding: 10rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  display: inline-block;
}

.game-wrapper {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.maze-grid {
  display: flex;
  flex-direction: column;
  background-color: #2C5F8D; /* Wall color as background */
  border: 4rpx solid #2C5F8D;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  position: relative;
}

.maze-row {
  display: flex;
  flex: 1;
}

.maze-cell {
  flex: 1;
  box-sizing: border-box;
}

.wall {
  background-color: #2C5F8D;
}

.path {
  background-color: #FFFFFF;
}

.start {
  background: radial-gradient(circle, #87CEEB, #5F9FBF);
}

.end {
  background: radial-gradient(circle, #FFD700, #FFA500);
}

.player {
  position: absolute;
  background-color: #1E90FF;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(30, 144, 255, 0.8);
  transition: top 0.1s linear, left 0.1s linear;
  z-index: 10;
}

/* 底部UI */
.bottom-bar {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.stats-container {
  display: flex;
  gap: 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  background-color: rgba(255, 255, 255, 0.7);
  padding: 15rpx 30rpx;
  border-radius: 20rpx;
}

.stat-icon {
  margin-right: 8rpx;
}

.restart-button-wrapper {
  display: flex;
}

.restart-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  font-size: 40rpx;
  color: #333;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 0; /* 重置内边距确保圆形 */
  line-height: 1; /* 确保图标垂直居中 */
}

/* 走过的路径标记 */
.trail-cell {
  position: absolute;
  background-color: rgba(30, 144, 255, 0.2);
  z-index: 5;
  pointer-events: none; /* 确保标记层不会阻挡下方的触摸事件 */
}

/* 覆盖层样式 */
.game-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8px);
  z-index: 100;
}

.overlay-content {
  text-align: center;
  padding: 40rpx;
  background-color: rgba(44, 95, 141, 0.85);
  width: 70%;
  max-width: 600rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

.overlay-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 20rpx;
}

.overlay-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 50rpx;
}

.btn-start, .btn-next, .btn-restart, .btn-back {
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.8);
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx;
  width: 80%;
}

.btn-start, .btn-next {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.4);
}

.btn-restart {
  background: linear-gradient(135deg, #1E90FF, #4682B4);
  box-shadow: 0 4rpx 12rpx rgba(30, 144, 255, 0.3);
}

.btn-back {
  background: linear-gradient(135deg, #87CEEB, #ADD8E6);
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(135, 206, 235, 0.3);
}

.win-stats {
  margin: 30rpx 0 40rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
}

.stat-line {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  margin: 12rpx 0;
}

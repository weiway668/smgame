/* pages/maze/maze.wxss */
/* 迷宫游戏页面样式 */

.container {
  height: 100vh;
  background: linear-gradient(180deg, #4CAF50 0%, #66BB6A 100%);
  display: flex;
  flex-direction: column;
  padding: 0;
  overflow: hidden;
}

/* 紧凑型游戏头部 */
.game-header-compact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.98), rgba(255, 255, 255, 0.95));
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  height: 60rpx;
}

.back-btn-compact {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(145deg, #4CAF50, #388E3C);
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(76, 175, 80, 0.3);
}

.game-title-compact {
  font-size: 32rpx;
  font-weight: 600;
  color: #2E7D32;
  flex: 1;
  text-align: center;
}

.difficulty-selector-compact {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: linear-gradient(145deg, #4CAF50, #388E3C);
  color: white;
  border-radius: 16rpx;
  font-size: 26rpx;
  height: 50rpx;
}

.difficulty-selector-compact .arrow {
  margin-left: 8rpx;
  font-size: 18rpx;
}

/* 悬浮统计信息 */
.floating-stats {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  justify-content: space-between;
  pointer-events: none;
  z-index: 10;
}

.floating-stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.floating-stat-item.left {
  margin-right: auto;
}

.floating-stat-item.right {
  margin-left: auto;
}

.stat-icon {
  font-size: 24rpx;
  filter: grayscale(0%);
}

.floating-stat-item .stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 游戏画布区域 */
.game-canvas-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  flex: 1;
  max-height: 750rpx; /* 限制最大高度 */
}

.game-canvas {
  position: relative;
  background: #2C3E50; /* 与迷宫墙壁颜色一致 */
  border-radius: 12rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  margin: 0;
  padding: 0;
  display: block;
}

/* 透明交互层 */
.touch-layer {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}

/* 游戏覆盖层 */
.game-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  margin: 20rpx;
}

.overlay-content {
  text-align: center;
  padding: 40rpx;
}

.overlay-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.overlay-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
}

.btn-start, .btn-resume, .btn-restart {
  background: #4CAF50;
  color: white;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.btn-restart {
  background: #FF9800;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

/* 控制面板 */
.control-panel {
  padding: 30rpx 20rpx 40rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.98), rgba(255, 255, 255, 0.95));
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  box-shadow: 0 -6rpx 24rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(10px);
}

/* 控制提示 */
.control-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  padding: 30rpx;
  background: linear-gradient(145deg, #f8f9fa, #e9ecef);
  border-radius: 20rpx;
  margin: 20rpx;
}

.hint-icon {
  font-size: 36rpx;
  animation: hint-pulse 2s ease-in-out infinite;
}

.hint-text {
  font-size: 28rpx;
  color: #495057;
  font-weight: 500;
}

@keyframes hint-pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.15);
  }
}

/* 图标化操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  gap: 30rpx;
}

.action-btn.icon-btn {
  flex: 1;
  padding: 24rpx 0;
  background: linear-gradient(145deg, #ffffff, #f8f8f8);
  border: 2rpx solid #4CAF50;
  border-radius: 20rpx;
  transition: all 0.15s ease;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08),
              inset 0 1rpx 0 rgba(255, 255, 255, 1);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.btn-icon {
  font-size: 36rpx;
  line-height: 1;
  color: #4CAF50;
  transition: transform 0.2s ease;
}

.btn-tooltip {
  font-size: 20rpx;
  color: #666;
  opacity: 0.8;
  font-weight: 500;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(76, 175, 80, 0.1), transparent);
  transition: left 0.5s ease;
}

.action-btn:active {
  transform: translateY(1rpx);
  background: linear-gradient(145deg, #4CAF50, #388E3C);
  color: white;
  border-color: #388E3C;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1),
              inset 0 -1rpx 0 rgba(0, 0, 0, 0.2);
}

.action-btn.icon-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1),
              inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.action-btn.icon-btn:active .btn-icon {
  transform: scale(0.9);
}

.action-btn.icon-btn.active {
  background: linear-gradient(145deg, #4CAF50, #388E3C);
  border-color: #388E3C;
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.3),
              inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

.action-btn.icon-btn.active .btn-icon {
  color: white;
  transform: scale(1.1);
}

.action-btn.icon-btn.active .btn-tooltip {
  color: rgba(255, 255, 255, 0.9);
}

.action-btn.icon-btn.disabled {
  opacity: 0.4;
  background: linear-gradient(145deg, #f0f0f0, #e0e0e0);
  border-color: #ddd;
  box-shadow: none;
}

.action-btn.icon-btn.disabled .btn-icon {
  color: #999;
}

.action-btn.icon-btn.disabled .btn-tooltip {
  color: #999;
}

.action-btn.icon-btn.disabled:active {
  transform: none;
  background: linear-gradient(145deg, #f0f0f0, #e0e0e0);
}

.action-btn.active::before {
  left: 100%;
}

.action-btn.disabled {
  opacity: 0.4;
  background: linear-gradient(145deg, #f0f0f0, #e0e0e0);
  color: #999;
  border-color: #ddd;
  box-shadow: none;
}

.action-btn.disabled:active {
  transform: none;
  background: linear-gradient(145deg, #f0f0f0, #e0e0e0);
  color: #999;
}

/* 动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.pulse-animation {
  animation: pulse 2s ease infinite;
}